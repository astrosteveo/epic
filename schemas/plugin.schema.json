{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "version", "description"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Plugin identifier (lowercase, hyphens allowed)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version"
    },
    "description": {
      "type": "string",
      "minLength": 10
    },
    "author": {
      "type": "object",
      "properties": {
        "name": { "type": "string" }
      }
    },
    "keywords": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": true
}
